---
// library imports
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

// images
import user from "../../assets/about-me/about-me.jpg";

// utility imports
import config from "../../../config";

// component imports
import SocialMedia from "../utility/SocialMedia.astro";
---

<div class="about-me">
  <div class="image-wrapper">
    <Image
      src={user}
      alt="About me image"
      class="about-me-img"
      width={800}
      height={400}
      format="webp"
      loading={"eager"}
    />
    <Image
      src={user}
      alt="About me image"
      class="about-me-img phone"
      width={200}
      height={200}
      format="webp"
      loading={"eager"}
    />
    <SocialMedia
    socials={config.socials}
    class="flex"
  />
  </div>
  <div class="user">
    <h3>Profile</h3>
    <div>
      <h4>Name:</h4>
      <p>Piero Buccioni / Myndi</p>
    </div>
    <div>
      <h4>Age:</h4>
      <p data-age></p>
    </div>
    <div>
      <h4>Birthday:</h4>
      <!-- inputing the birthday displays the age automatically -->
      <p data-birthday>28/May/1993</p>
    </div>
    <div>
      <h4>Country:</h4>
      <p class="flag-holder">
        <Icon
          name="cif:cl"
          class="flag"
        /> Chile
      </p>
    </div>
    <div>
      <h4>Languages:</h4>
      <p>English, Spanish and a bit of Russian</p>
    </div>
    <div>
      <h4>Technologies:</h4>
      <p class="technologies-holder">
        <Icon class="technology" name="fa-brands:html5"/>
        <Icon class="technology" name="fa-brands:css3"/>
        <Icon class="technology" name="fa-brands:js"/>
        <Icon class="technology" name="simple-icons:astro"/>
      </p>
    </div>
    <p class="long-about">I consider myself a small developer passionate about front-end, UX/UI with full stack aspirations.</p>
    <p class="long-about">Meeting my client needs are top priority, or focusing on what the user wants. There's nothing more satisfying than seeing a smile on their face after a well delivered product.</p>
    <p class="long-about">As for my nickname "Myndi", it comes from an old nickname I got attached to, and I still prefer to use it to this day. I simple love it ðŸ’ž</p>
  </div>
</div>

<style lang="scss">
  .about-me {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;

    h3 {
      font-size: 1.2rem;
    }

    @media (max-width: 970px) {
      .image-wrapper {
        .about-me-img {
          display: none;
        }

        .phone {
          display: block;
          object-position: top;
          border-radius: 50%;
        }
      }
    }

    @media (max-width: 970px) {
      h3 {
        text-align: center;
      }
    }

    .user {
      flex: 1;

      @media (max-width: 970px) {
        flex: 1 0 100%;
        text-align: center;

        & > div {
          justify-content: center;

          h4 {
            text-align: end;
            padding-inline-end: .5rem;
          }

          & > :first-child {
            min-width: 0 !important;
          }
        }

        .long-about {
          text-align: center;
          max-width: 500px;
          margin-inline: auto;
        }
      }

      & > div {
        display: flex;
        flex-wrap: wrap;
        margin-block-end: 0.25rem;

        &:last-of-type {
          margin-block-end: 1rem;
        }

        h4,
        p {
          margin: 0;
        }

        & > :first-child {
          min-width: 12ch;
        }

        .flag-holder, .technologies-holder {
          display: flex;
          gap: 0.25rem;

          .flag {
            width: 40px;
            aspect-ratio: 2 / 1;
          }

          .technology {
            width: 20px;
            aspect-ratio: 1;
          }
        }
      }

      .long-about {
        flex: 1;
      }
    }

    .image-wrapper {
      flex: 1 0 0;

      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      gap: var(--rem-lg);
    }

    .about-me-img {
      border-radius: 0.5rem;
      object-fit: cover;
      object-position: top;

      &.phone {
        display: none;
      }
    }
  }
</style>

<script lang="js">
const birthdayElement = document.querySelector("[data-birthday]");
const ageElement = document.querySelector("[data-age]");

let birthdayString = birthdayElement.innerText;
let birthday = new Date(birthdayString);
let today = new Date();

let age = today.getFullYear() - birthday.getFullYear();
let m = today.getMonth() - birthday.getMonth();

if (m < 0 || (m === 0 && today.getDate() < birthday.getDate())) {
    age--;
}

ageElement.innerText = `${age} years old`;
</script>
