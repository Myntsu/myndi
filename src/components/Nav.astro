---
// component import
import Footer from "../components/Footer.astro";

//library import
import { Image } from "@astrojs/image/components";
import SocialMedia from "./simple/SocialMedia.astro";

let showDiv = Astro.request.url.includes("/about");
---

<button type="button" class="hamburger" aria-label="Open navigation bar"></button>
<nav aria-label="Primary">
  <div class="container">
    <div class="inner">
      <a href="/">
        <Image
          src="/images/smytsu_headshot.jpg"
          alt="Smytsu's headshot image"
          width={150}
          height={150}
          format="avif"
          fit="cover"
          quality={20}
          aspectRatio="1:1"
          class="headshot-image"
        />
        Home
      </a>
      <ul>
        <li>
          <a
            href="/about"
            data-link>
            About
          </a>
        </li>
        {
          showDiv 
          ? ( <ul class="about-me-details">
            <li><a href="#About-Me">About me</a></li>
            <li><a href="#Current-Projects">Current projects</a></li>
            <li><a href="#Technologies">Technologies</a></li>
            <li><a href="#Hobbies">Hobbies</a></li>
          </ul> )
          : null
        }
        <li>
          <a
            href="/blog"
            data-link
            >Blog</a
          >
        </li>
        <li>
          <a
            href="/dummy1"
            data-link
            >Dummy 1</a
          >
        </li>
        <li>
          <a
            href="/dummy2"
            data-link
            >Dummy 2</a
          >
        </li>
        <li>
          <a
            href="/dummy3"
            data-link
            >Dummy 3</a
          >
        </li>
      </ul>
    </div>
    <Footer />
  </div>
  <SocialMedia 
  socials={[
    { platform: "facebook", link: "www.facebook.com", handle: "Userasadaadsassasaas" },
    { platform: "instagram", link: "https://www.instagram.com/", handle: "User" },
    { platform: "youtube", link: "https://www.youtube.com/", handle: "@User" },
    { platform: "github", link: "https://github.com/", handle: "@User" },
  ]}
  />
</nav>

<style lang="scss">
  nav {
    --footer-distance: 1rem;
    --current-font-size: 1.25rem;
    position: sticky;
    top: 0;
    overflow-y: scroll;
    height: 100vh;
    z-index: 9999;

    width: 100%;
    max-width: var(--navbar-width);
    background-color: hsl(var(--background-lighter));
    font-size: var(--current-font-size);
  }

  .hamburger {
    display: none;
    position: fixed;
    top: var(--rem-xl);
    right: var(--rem-xl);
    font-size: 2rem;
    z-index: 10000;

    transition: background-color 200ms linear;

    &::before {
      content: "\f0c9";
      font-family: "Font Awesome 6 Free";
      font-weight: 900;
      color: hsl(var(--font));
      padding: .5rem;
    }

    @media only screen and (max-width: 870px) {
      display: flex;
      background-color: hsl(var(--background-lighter));
      border: 1px solid hsl(var(--font) / 0.3);
      border-radius: var(--rem-sm);
    }
  }

  .arrow-swipe {
    position: fixed;
    left: 0;
    top: 50%;
    transform: translate(-50%, -50%);

    display: flex;
    justify-content: flex-end;
    align-items: center;

    width: 30px;
    aspect-ratio: 1/2;
    padding: .25rem;
    background-color: hsl(var(--font));
    border: none;
    border-radius: .5rem;
  
    &::after {
      content: '>';
      color: hsl(var(--background));
    }
  }

  .container {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .headshot-image {
    border-radius: 50%;
    margin-inline: auto;
  }

  .inner {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    width: 100%;

    > a {
      display: flex;
      flex-direction: column;
      gap: var(--rem-lg);

      padding-block: var(--rem-lg);

      width: 100%;
      aspect-ratio: 1/1;
      color: hsl(var(--main-color));
      text-align: center;
      text-decoration: none;

      &:is(:hover, :focus-visible) {
        color: var(--white);
      }
    }

    ul {
      --main-color: 230 90% 80%;
      width: 100%;
      list-style: none;
      margin: 0;
      padding: 0;

      li {
        position: relative;
        padding-inline-start: var(--rem-lg);

        a {
          display: flex;
          padding-block: var(--rem-sm);
          color: hsl(var(--main-color));
          text-decoration: none;

          &[data-link] {
            &:is(.loaded) {
              transition: padding-inline-start 250ms ease;
            }
          }
          
          &[aria-current="page"] {
            padding-inline-start: var(--rem-xl);
            color: hsl(var(--white));

            &::before {
              content: "";
              position: absolute;
              top: 0;
              bottom: 0;
              left: 0;
              border-inline-start: var(--rem-xs) solid hsl(var(--main-color));
            }
          }
        }

        &:is(:hover, :focus-visible) {
          background-color: hsl(var(--main-color) / 0.1);

          a {
            color: var(--white);
            padding-inline-start: var(--rem-xl);
          }
        }

        &:has([aria-current="page"]) {
          background-color: hsl(var(--main-color) / 0.1);
        }
      }
    }
  }

  .about-me-details {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      background-color: hsl(var(--main-color) / 0.1);

      &:has(a.active) {
        background-color: hsl(var(--main-color) / 0.5);

        a {
          color: hsl(var(--mwhite));
        }
      }

      a {
        font-size: 1rem;
        width: 100%; 
        transition: padding-inline-start 250ms ease;
      }
    }
  }
</style>

<script>
  import "../scripts/nav.js";
</script>
