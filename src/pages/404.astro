---
//library import
import { Image } from 'astro:assets'

// image imports
import error from '../assets/404.jpg'

// component imports
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Page not found">
    <div class="error-page">
        <h1>Error 404</h1>
        <h2>I'm sorry, you might have landed in the <b>wrong page</b>, let's go back...</h2>
        <div class="button">
            <a
                href="/"
                class="button"
                >Return</a
            >
        </div>
        <Image
            width={400}
            height={300}
            format="webp"
            src={error}
            alt="Wrong path image"
            class=""
        />
    </div>
</MainLayout>

<style>
    .error-page {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: var(--rem-lg);

        max-width: 400px;

        margin-inline: auto;
        padding: var(--rem-lg);
    }

    .error-page > * {
        margin-block-end: 0;
    }

    h1, h2 {
        text-align: center;
        text-wrap: balance;
    }

    img {
        width: 100%;
        border-radius: .5rem;
        object-fit: cover;
    }
</style>
