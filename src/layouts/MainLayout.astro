---
import Nav from "../components/Nav.astro";
import MainHead from "./MainHead.astro";
import "../css/main.scss";

const {
  title = "Astro Portfolio/Blog",
  description = "Reference links for this Blog",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="es">
  <MainHead
    {title}
    {description}
    {image}
    {frontmatter}
    {robots}
  />
  <body>
    <div
      id="layout"
      class="layout">
      <Nav />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
