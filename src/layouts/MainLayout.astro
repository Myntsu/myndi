---
import Nav from "../components/Nav.astro";
import MainHead from "./MainHead.astro";
import "../css/global.scss";

const {
  title = "Myndi Portfolio and Blog",
  description = "Portfolio and Blog built with Astro by Myndi",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="es" class="dark">
  <MainHead
    {title}
    {description}
    {image}
    {frontmatter}
    {robots}
  />
  <body>
    <div
      id="layout"
      class="layout">
      <Nav />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<script>
  import '../scripts/lightmode.js';
</script>