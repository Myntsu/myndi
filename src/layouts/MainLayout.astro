---
import Nav from "../components/Nav.astro";
import MainHead from "./MainHead.astro";
import "../css/global.scss";
import { Icon } from "astro-icon";

const {
  title = "Myndi Portfolio and Blog",
  description = "Portfolio and Blog built with Astro by Myndi",
  image,
  frontmatter,
  robots,
} = Astro.props;
---

<html lang="es">
  <MainHead
    {title}
    {description}
    {image}
    {frontmatter}
    {robots}
  />
  <body>
    <div
      id="layout"
      class="layout">
      <Nav />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<div class="color-scheme-wrapper">
  <button class="color-scheme dark">
    <Icon class="sun-svg" name="mdi:white-balance-sunny" />
    <Icon class="moon-svg" name="mdi:weather-night" />
  </button>
</div>

<script>
  import '../scripts/lightmode.js';
</script>